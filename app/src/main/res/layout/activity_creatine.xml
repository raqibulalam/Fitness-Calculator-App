<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="10"
    app:umanoPanelHeight="60dp"
    app:umanoShadowHeight="20dp"
    tools:context="org.lukasowy.fitnesscalculators.CreatineActivity">

    <RelativeLayout
        android:id="@+id/allScreenCreatine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/resultTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCalculate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:text="..."
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultTextView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCalculate"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginTop="59dp"
            android:background="@drawable/button_corners"
            android:elevation="4dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Result"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/titleViewCreatine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Creatine Intake"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleViewCreatine"
            android:layout_marginTop="60dp"
            android:layout_toStartOf="@+id/btnCalculate"
            android:text="Weight:"
            android:textColor="@android:color/white"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/inputWeight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorWhite"
            android:ems="10"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorLink="@color/colorWhite" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/slidingUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:text="How important is to take creatine?"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:text="@string/longTextCreatine"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
